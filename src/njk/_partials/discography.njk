{% extends '_layouts/member-base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    
    {% for discography in data.discography %}
      <div class="col-sm-8 col-md-6 col-lg-4">
        <div class="card mb-5" style="width: auto;">
        <img src="img/discs/{{ discography.image }}" class="card-img-top" alt="...">
          <div class="card-body">
            <div class="disc-headline">
              <p class="card-title">
                <b>{{ discography.title }}</b>
              <p class="card-text">
                <p>{{ discography.year }}</p>
              </p>
            </div>
          </div>
       </div>
      </div>
      
      
      
      
      
      {% endfor %}



    </div>
  </div>
</article>
{% endblock %}