{% extends '_layouts/member-base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4 left-rail">
      {% block photo %}
        <img src="img/members/{{ members.image }}" alt="member in color" class="img-fluid">
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
      
        <h2>{{ members.name }}</h2>
    
        <p>{{ members.text }}</p>
      {% endblock %}

    </div>
  </div>
</article>
{% endblock %}
