 {% extends '_layouts/member-base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block photo %}
        <img src="img/members/{{ members.image }}" alt="member in color" class="img-fluid">
      {% endblock %}
    </div>
    <div class="col-sm-8">
    {% block story %}
      <div class="headline-two">
        {{ members.name }}
      </div>
      <div class="body-members">
        <p>{{ members.text| safe }}</p>
      </div>
    {% endblock %}
    </div>
  </div>
</article>
{% endblock %}